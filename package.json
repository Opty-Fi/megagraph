{
  "name": "defi-protocol-subgraph",
  "version": "1.0.0",
  "description": "This package contains subgraph DeFi protocols that opty.fi's earn protocol integrates natively",
  "author": "Opty-Fi <info@opty.fi>",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Opty-Fi/defi-protocol-subgraph"
  },
  "scripts": {
    "setup:all": "yarn prepare:subgraph && yarn subgraph:deploy",
    "setup:all:local": "yarn prepare:subgraph && yarn subgraph:deploy:local",

    "shauntest": "yarn envmustache && yarn scriptcodegen && yarn envauth && yarn envdeploy",
    "shauntestlocal": "yarn envmustachelocal && yarn scriptcodegen && yarn envcreatelocal && yarn envdeploylocal",
    
    "envmustache": "./node_modules/.bin/dotenv -- yarn subgraph:mustache",
    "envmustachelocal": "./node_modules/.bin/dotenv -e .dev.env -- yarn subgraph:mustache",
    "subgraph:mustache": "mustache ./config/${CONFIG:-dev}.json ${BLOCKCHAIN:-ethereum}.subgraph.template.yaml > subgraph.yaml",

    "scriptcodegen": "graph codegen --output-dir ./generated",

    "envauth": "./node_modules/.bin/dotenv -- yarn auth",
    "auth": "graph auth https://api.thegraph.com/deploy/ $ACCESS_TOKEN",
    
    "envdeploy": "./node_modules/.bin/dotenv -- yarn subgraph:deploy",
    "subgraph:deploy": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ $SLUG",

    
    "envcreatelocal": "./node_modules/.bin/dotenv -e .dev.env -- yarn subgraph:create:local",
    "subgraph:create:local": "graph create --node http://localhost:8020/ $SLUG",

    "envdeploylocal": "./node_modules/.bin/dotenv -e .dev.env -- yarn subgraph:deploy:local",
    "subgraph:deploy:local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001/ $SLUG"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.20.0",
    "@graphprotocol/graph-ts": "^0.20.0",
    "@types/node": "^15.12.4",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.0.0",
    "mustache": "^4.2.0",
    "typescript": "^4.3.2"
  }
}
